% Custom TheoremStyle for indented definitions and theorems
\newtheoremstyle{indentDefn}
{3pt} % Space above
{3pt} % Space below
{\itshape} % Body font
{3em} % Indent amount
{\bf} % Theorem head font
{} % Punctuation after theorem head
{0.5em} % Space after theorem head
{} % Theorem head spec

\newtheoremstyle{indentThm}
{3pt} % Space above
{0pt} % Space below
{} % Body font
{3em} % Indent amount
{\bf} % Theorem head font
{} % Punctuation after theorem head
{0.5em} % Space after theorem head
{} % Theorem head spec

\theoremstyle{indentDefn}
\newtheorem{defn}{Definition}
\newtheorem{obs}{Observation}

\theoremstyle{indentThm}
\newtheorem{thm}{Theorem}
\newtheorem{lemma}{Lemma}

\theoremstyle{plain}

